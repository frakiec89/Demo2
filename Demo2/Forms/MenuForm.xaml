<Window x:Class="Demo2.Forms.MenuForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo2.Forms"
        mc:Ignorable="d"
        Title="MenuForm" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="93*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="449*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>

        <StackPanel  Grid.Row="1" Grid.Column="1">
            
                <Button Margin="10,10,10,10" 
                    Content="Севрис" 
                        Height="35" x:Name="btServis" Click="btServis_Click" />
                <Button Margin="10,10,10,10"  Height="35" Content="Клиенты" 
                    x:Name="btUser" Click="btUser_Click"/>
                <Button Margin="10,10,10,10"  Height="35" Content="Услуги" 
                    x:Name="btUslugi" Click="btUslugi_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
